<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/restaurantItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="true"
        android:maxLines="1"
        android:text="Sarovar Restaurant asbduas iasbd  ioasdoi asid"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/restaurantItemDistance"
        app:layout_constraintEnd_toStartOf="@+id/restaurantItemImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurantItemDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:text="About 50m away"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantItemTitle" />

    <ImageView
        android:id="@+id/restaurantItemImage"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="4dp"
        android:cropToPadding="false"
        app:tint="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@id/restaurantItemTitle"
        app:layout_constraintBottom_toBottomOf="@id/restaurantItemTitle"
        app:layout_constraintStart_toEndOf="@id/restaurantItemTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_restaurant" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="6dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/restaurantItemDistance" />

</androidx.constraintlayout.widget.ConstraintLayout>